<!doctype html>
<html lang="en">
<head>

    <title>Add Réservation</title>


<%- include('../nav.ejs') %>

<% if (message=="Success") { %>
    <div class="alert alert-success" role="alert">Bien ajouté</div>
    <% } %>
    
    <% if (message=="Erreur") { %>
    <div class="alert alert-danger" role="alert">Erreur tout tous les champs sont obligatoires </div>
    <% } %>
    <div class="card"> 
        <div class="card-header">
        Add Réservation
        </div>
  <div class="card-body">
      <form action="/apis/admin/reservers/add" method="post">
        <div class="form-group">
            <input type="date" class="form-control" name="dataPrise" value="<%= dataPrise %>" placeholder="dataPrise" autocomplete="off">
        </div>
        <div class="form-group">
            <input type="date" class="form-control" name="dateRemise" value="<%= dateRemise %>" placeholder="dateRemise" autocomplete="off">
        </div>
        <div class="form-group">
            <select name="id_book" id="id_book"  class="form-control">
                <% for(var i = 0; i< books.length; i++) { %>
                    <option value="<%= books[i].id%>"><%= books[i].title%></option>
                <% } %>
    
            </select>
        </div>
        <div class="form-group">
            <select name="id_user" id="id_user"  class="form-control">
                <% for(var i = 0; i< users.length; i++) { %>
                    <option value="<%= users[i].id%>"><%= users[i].full_name%></option>
                <% } %>
    
            </select>
        </div>
    <div class="form-group">
        <input type="submit" class="btn btn-info" value="Valider"/>
    </div>
      </form>
  </div>
    </div>

</body>
</html>