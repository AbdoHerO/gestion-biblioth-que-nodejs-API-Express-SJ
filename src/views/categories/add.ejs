<!doctype html>
<html lang="en">

<head>

    <title>Add categorie</title>


    <%- include('../nav.ejs') %>


        <% if (message=="Success" ) { %>
            <div class="alert alert-success" role="alert">Bien ajout√©</div>
            <% } %>

                <% if (message=="Erreur" ) { %>
                    <div class="alert alert-danger" role="alert">Erreur tout tous les champs sont obligatoires </div>
                    <% } %>
                        <div class="card">
                            <div class="card-header">
                                Ajouter un categorie
                            </div>
                            <div class="card-body">
                                <form action="/apis/admin/categories/add" method="post">
                                    <div class="form-group">
                                        <input type="text" class="form-control" name="libelle"
                                            value="<%= libelle %>" placeholder="libelle" autocomplete="off">
                                    </div>
                                    <div class="form-group">
                                        <input type="submit" class="btn btn-info" value="Valider" />
                                    </div>
                                </form>
                            </div>
                        </div>

                        </body>

</html>