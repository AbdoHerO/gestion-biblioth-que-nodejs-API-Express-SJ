<!doctype html>
<html lang="en">
<head>

    <title>Add Book</title>


<%- include('../nav.ejs') %>

<% if (message=="Success") { %>
    <div class="alert alert-success" role="alert">Bien ajout√©</div>
    <% } %>
    
    <% if (message=="Erreur") { %>
    <div class="alert alert-danger" role="alert">Erreur tout tous les champs sont obligatoires </div>
    <% } %>
    <div class="card"> 
        <div class="card-header">
        Add Book
        </div>
  <div class="card-body">
      <form action="/apis/admin/books/add" method="post">
        <div class="form-group">
            <input type="text" class="form-control" name="title" value="<%= title %>" placeholder="title" autocomplete="off">
        </div>
        <div class="form-group">
            <input type="text" class="form-control" name="image" value="<%= image %>" placeholder="image" autocomplete="off">
        </div>
        <div class="form-group">
            <textarea class="form-control" name="description" value="" placeholder="description" autocomplete="off">
                <%= description %>
            </textarea>
        </div>
    <div class="form-group">
        <select name="id_categorie" id="id_categorie"  class="form-control">
            <% for(var i = 0; i< categories.length; i++) { %>
                <option value="<%= categories[i].id%>"><%= categories[i].libelle%></option>
            <% } %>

        </select>
    </div>
    <div class="form-group">
        <input type="submit" class="btn btn-info" value="Valider"/>
    </div>
      </form>
  </div>
    </div>

</body>
</html>