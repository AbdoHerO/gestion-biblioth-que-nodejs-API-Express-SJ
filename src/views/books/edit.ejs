<!doctype html>
<html lang="en">

<head>

    <title>Edit Book</title>

    <%- include('../nav.ejs') %>

        <div class="card">
            <div class="card-header">
                Edit book :  <%= book.id %>
            </div>


            <div class="card-body">
                <form action="/apis/admin/books/edit/<%= book.id %>" method="post">

                    <div class="form-group">
                        <input type="text" class="form-control" name="title" value="<%= book.title %>" placeholder="title" autocomplete="off">
                    </div>
                    <div class="form-group">
                        <input type="text" class="form-control" name="image" value="<%= book.image %>" placeholder="image" autocomplete="off">
                    </div>
                    <div class="form-group">
                        <textarea class="form-control" name="description" value="" placeholder="description" autocomplete="off">
                            <%= book.description %>
                        </textarea>
                    </div>


                    <div class="form-group">
                        <select name="id_categorie" id="id_categorie"  class="form-control">
                            <% for(var i = 0; i< categories.length; i++) { %>
                                <%if( categories[i].id == book.id_categorie){%>
                                <option value="<%= categories[i].id%>" selected><%= categories[i].libelle%></option>
                                <% } %>
                                <option value="<%= categories[i].id%>"><%= categories[i].libelle%></option>
                            <% } %>
                
                        </select>
                    </div>
                    <div class="form-group">
                        <input type="submit" class="btn btn-info" value="Valider" />
                    </div>
                </form>
            </div>

        </div>

        </body>

</html>